@model Trachtenberg_System.Areas.Identity.Data.ApplicationUser

@{
    Layout = "_Layout";
    ViewData["Title"] = "Practise";
}
@if (Model.UserStats == null || Model.HighScores == null)
{
    <h1 class="text-4xl">No stats available go and complete some practise first</h1>
}

@if (Model.UserStats != null && Model.HighScores != null)
{
<div class="flex flex-col items-center p-2 w-full">
    <h2 class="text-3xl">These are your stats</h2>
    <div class="flex flex-col items-center">
        <p>Tests completed: @Model.UserStats.NumberOfTestsCompleted</p>
        <p>Average Accuracy: @Model.UserStats.AverageAccuracy %</p>
        <p>Multiplication Easy Test High score: @Model.HighScores.MultiplicationEasyTestScore</p>
        <p>Multiplication Medium Test High score: @Model.HighScores.MultiplicationMediumTestScore</p>
        <p>Multiplication Hard Test High score: @Model.HighScores.MultiplicationHardTestScore</p>
        <p>Multiplication Expert Test High score: @Model.HighScores.MultiplicationExpertTestScore</p>
        <p>Multiplication Legend Test High score: @Model.HighScores.MultiplicationLegendTestScore</p>
    </div>
    
</div>
}
